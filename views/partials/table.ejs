<% if (rows && rows.length > 0) { %>
  <div class="table-container">
    <div class="table-responsive">
      <table class="table custom-table mx-auto">
        <thead>
          <tr>
            <% Object.keys(rows[0]).forEach(col => { %>
              <th><%= col %></th>
            <% }) %>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% rows.forEach(row => { %>
  <tr>
    <% Object.entries(row).forEach(([col, val]) => { %>
      <td><%= val %></td>
    <% }) %>

    <!-- delete --> 
    <td>
      <form action="/delete/<%= tableName %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this row?');">
        <input type="hidden" name="id" value="<%= row.id %>" />
        <input type="hidden" name="station" value="<%= stationName %>" />
        <button type="submit" class="btn btn-link text-danger p-0">
          🗑️
        </button>
      </form>
    </td>
  </tr>
<% }) %>

        </tbody>
      </table>
    </div>

    <!-- add row -->
    <h3 class="text-center my-4">Add New Entry</h3>
    <form action="/add/<%= tableName %>" method="POST" class="mb-5 text-white">
      <% Object.keys(rows[0]).forEach(col => {
           if (col !== "id") { %>
        <div class="mb-3">
          <label class="form-label"><%= col %></label>
          <input type="text" name="<%= col %>" class="form-control" required />
        </div>
      <% } }) %>
      <button type="submit" class="btn btn-secondary">Add Entry</button>
    </form>

    <!-- update row -->
<h3 class="text-center my-4">Update Entry</h3>
<form action="/update/<%= tableName %>" method="POST" class="mb-5 text-white">
  <input type="hidden" name="key" value="id" />

  <div class="mb-3">
    <label class="form-label">ID of Row to Update</label>
    <input type="text" name="keyValue" class="form-control" required />
  </div>

  <% Object.keys(rows[0]).forEach(col => {
       if (col !== "id") { %>
    <div class="mb-3">
      <label class="form-label"><%= col %></label>
      <input type="text" name="<%= col %>" class="form-control" />
    </div>
  <% } }) %>

  <button type="submit" class="btn btn-secondary">Update Entry</button>
</form>

  </div>
<% } else { %>
  <p class="text-center mt-4">No data available in <%= tableName %> table.</p>
<% } %>
